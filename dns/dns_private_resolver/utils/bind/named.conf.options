options {
        directory "/var/cache/bind";

        forwarders { $IP_ADDRESS; }; // IP Address of forwarder

        dnssec-enable yes; 
        dnssec-validation yes; 

        listen-on port 53 { any; }; 
        listen-on-v6 port 53 { ::1; }; 

        allow-query { any; };

        recursion yes;
};